{
    "name": "FreeRTOS Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": ["ms-vscode.cpptools", "ms-vscode.cmake-tools"]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "git submodule update --init --recursive"
}
